<% if notice.present? %>
  <div id="notice" class="alert alert-info" role="alert"><%= notice %></div>
<% end %>

<div class="panel panel-default">
  <dl class="dl-horizontal" style="padding-top: 15px;">
    <dt>Name:</dt>
    <dd><%= @entity.name %></dd>
    <dt>App:</dt>
    <dd><%= @entity.app_id %></dd>
    <dt>Note:</dt>
    <dd><%= @entity.note %></dd>
  </dl>
</div>


<h1>Fields</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>FieldType</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= Core::FieldType.find(field.field_type).name %></td>
        <td><%= field.note %></td>
        <td><%= link_to 'Show', [@app, @entity, field] %></td>
        <td><%= link_to 'Edit', edit_app_entity_field_path(@app, @entity, field) %></td>
        <td><%= link_to 'Destroy', [@app, @entity, field] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_app_entity_path(@entity, @app) %> |
<%= link_to 'Back', app_entities_path(@app) %> |
<%= link_to 'Datas', app_entity_datas_path(@app, @entity) %>


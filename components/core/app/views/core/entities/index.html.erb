<h1>Entities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>App</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.name %></td>
        <td><%= @app.name %></td>
        <td><%= entity.note %></td>
        <td><%= link_to 'Show', [@app, entity] %></td>
        <td><%= link_to 'Edit', edit_app_entity_path(@app, entity) %></td>
        <td><%= link_to 'Destroy', [@app, entity] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entity', new_app_entity_path(@app), :class=>"btn btn-primary" %>

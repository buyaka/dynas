<h1><%= @entity.name.upcase %>'s datas</h1>
<h3><%= link_to "Add new data", new_app_entity_data_path(@app, @entity) %></h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
		<%# render @datas.to_yaml %>
    <% @datas.each do |d| %>
      <tr>
        <td><%= d["title"] %></td>
        <td><%= d["content"] %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', "#" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


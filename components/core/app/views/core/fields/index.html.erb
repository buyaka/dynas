<h1><%= @entity.name %> fields</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>FieldType</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.field_type %></td>
        <td><%= field.note %></td>
        <td><%= link_to 'Show', [@app, @entity, field] %></td>
        <td><%= link_to 'Edit', edit_app_entity_field_path(@app, @entity, field) %></td>
        <td><%= link_to 'Destroy', [@app, @entity, field] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Field', new_app_entity_field_path(@app, @entity), :class=>"btn btn-primary" %>

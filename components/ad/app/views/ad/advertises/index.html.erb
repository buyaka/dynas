<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Note</th>
      <th>Adtype</th>
      <th>Advertiser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.note %></td>
        <td><%= Ad::AdType.find(ad.ad_type_id).name %></td>
        <td><%= @advertiser.name %></td>
        <td><%= link_to 'Show', advertiser_campaign_advertise_path(@advertiser, @campaign, ad) %></td>
        <td><%= link_to 'Edit', edit_advertiser_campaign_advertise_path(@advertiser, @campaign, ad) %></td>
        <td><%= link_to 'Destroy', advertiser_campaign_advertise_path(@advertiser, @campaign, ad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_advertiser_campaign_advertise_path(@advertiser, @campaign) %>

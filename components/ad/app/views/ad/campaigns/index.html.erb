<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Note</th>
      <th>Advertiser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.note %></td>
        <td><%= @advertiser.name %></td>
        <td><%= link_to 'Show', advertiser_campaign_path(@advertiser, campaign) %></td>
        <td><%= link_to 'Edit', edit_advertiser_campaign_path(@advertiser, campaign) %></td>
        <td><%= link_to 'Destroy', advertiser_campaign_path(@advertiser, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_advertiser_campaign_path(@advertiser) %>
